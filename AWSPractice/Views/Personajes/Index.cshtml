@model IEnumerable<AWSPractice.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayName("Detalles")
            </th>
            <th>
                @Html.DisplayName("Editar")
            </th>
            <th>
                @Html.DisplayName("Eliminar")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img style="width:200px;height:150px" src="@item.ImagenUrl" alt="@item.Nombre" />
            </td>
            <td>
                <a class="btn btn-info" asp-controller="Personajes" asp-action="Details" asp-route-id="@item.IdPersonaje">Detalles</a>
            </td>
            <td>
                <a class="btn btn-warning" asp-controller="Personajes" asp-action="Edit" asp-route-id="@item.IdPersonaje">Editar</a>
            </td>
            <td>
                <a class="btn btn-warning" asp-controller="Personajes" asp-action="Delete" asp-route-id="@item.IdPersonaje">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
